@model DoctorViewModel
@{
    ViewData["Title"] = "Prescription Page";
}
<div>
    Doctor's Data:
    Name: @Model.Name
</div>
<div class="text-center">
    <input type ="text" />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model.Prescriptions)
            {
                <tr>
                    <td>@(Model.Prescriptions.IndexOf(prescription)+1)</td>
                    <td>@prescription.Name</td>
                    <td><a  asp-area="" asp-controller="Prescription" asp-action="View" asp-route-indexOfPrescription="@Model.Prescriptions.IndexOf(prescription)">View</a>
                    | 
                    <a asp-area="" asp-controller="Prescription" asp-action="Delete" asp-route-indexOfPrescription="@Model.Prescriptions.IndexOf(prescription)">Delete</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>
