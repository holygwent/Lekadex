@model PrescriptionViewModel
@{
    ViewData["Title"] = "Medicine Page";
}
<div>
    Prescription's data:
    Name: @Model.Name
</div>

<div class="text-center">
    <input type="text" />
   <table class="table">
       <thead>
           <tr>
               <th scope="col">
                   #
               </th>
               <th scope="col">
                   Name
               </th>
           </tr>
       </thead>
       <tbody>
           @foreach (var medicine in Model.Medicines)
           {
           <tr>
               <th scope="row">
                   @(Model.Medicines.IndexOf(medicine)+1)
               </th>
               <td>
                   @medicine.Name
               </td>
               <td>
               <td>
                   
                   <a asp-area="" asp-controller="Medicine" asp-action="Delete" asp-route-indexOfMedicine="@Model.Medicines.IndexOf(medicine)">Delete</a>
               </td>
               </td>
           </tr>
           }
       </tbody>
   </table>
</div>
